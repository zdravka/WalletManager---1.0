@model WalletManager.Models.LoginModel
@{
    ViewBag.Title = "index";
}

<div class="container">
    @using (Html.BeginForm("Index", "login", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        <h2>Вход</h2>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email", type = "email", autofocus = "" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password", type = "password" })
        <span></span>
        <div class="col-md-offset-2 col-md-10">
         <button type="submit" class="btn btn-lg btn-primary btn-block">вход</button>
        </div>
        @Html.ValidationSummary()
        }
    </div>


@model WalletManager.Models.MovementOfFundsModel
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"><strong><i>Save on date:</i></strong></h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
              
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label> Day in month interest</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RealDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RealDate, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary">

                    </div>
                </div>
            </div>
        }

    </div>
</div>